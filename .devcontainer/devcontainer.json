// https://github.com/PARKCHEOLHEE-lab/mydevcontainer/blob/main/.devcontainer/devcontainer.json

{
    "name": "mydevcontainer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "mounts": [
        "source=${localEnv:USERPROFILE}/.gitconfig,target=/root/.gitconfig,type=bind",
        "source=${localEnv:USERPROFILE}/.ssh/id_rsa,target=/root/.ssh/id_rsa,type=bind",
        "source=${localEnv:USERPROFILE}/.ssh/id_rsa.pub,target=/root/.ssh/id_rsa.pub,type=bind"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "editor.wordWrap": "wordWrapColumn",
                "editor.wordWrapColumn": 120,
                "terminal.integrated.shell.linux": "/bin/zsh"
			},
			"extensions": [
                "ms-python.python",
				"ms-python.vscode-pylance",
                "mhutchie.git-graph",
                "ms-python.debugpy",
                "hediet.debug-visualizer",
                "Meezilla.json",
                "njpwerner.autodocstring",
                "ms-azuretools.vscode-docker",
                "ms-toolsai.jupyter",
                "eamodio.gitlens"
			]
		}
	},
    "postCreateCommand": "./post-create-command.sh",
    "remoteUser": "root"
}
